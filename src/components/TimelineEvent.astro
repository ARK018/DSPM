---
import { Image } from "astro:assets";
const { year, title, description, image, alt, idx } = Astro.props;
---

<article
  class="relative grid grid-cols-1 gap-6 items-center py-10 sm:first-of-type:pt-0 sm:last-of-type:pb-0 md:grid-cols-[1fr_auto_1fr] md:gap-10 md:py-20"
>

  

 
  <div class="flex flex-col w-full md:hidden">
   
    <div class="flex items-center mb-2">
      <div class="px-4 py-1 bg-white rounded-full border border-black/10 shadow-[0_0_0_4px_#EBEDF0] text-xs font-semibold text-black">
        {year}
      </div>
    </div>
   
    <div class="flex flex-col gap-2 bg-[#EBEDF0]">
      <p class="text-xs uppercase tracking-wider text-amber-600 font-semibold">
        24 Aug, {year}
      </p>
      <h3 class="text-2xl font-semibold">{title}</h3>
      <p class="text-neutral-600 text-base">{description}</p>
    </div>
   
    <div class="mt-4">
      <Image src={image} format="avif" alt={alt} class="w-full aspect-video object-cover rounded-lg" />
    </div>
  </div>

  
  {idx % 2 === 0 ? (
    <>
      <div class="hidden md:flex flex-col gap-2">
        <p class="text-xs uppercase tracking-wider text-amber-600 font-semibold">
          24 Aug, {year}
        </p>
        <h3 class="text-3xl font-semibold">{title}</h3>
        <p class="text-neutral-600 text-lg">{description}</p>
      </div>
      <div class="hidden md:flex px-4 py-1 bg-white rounded-full shadow-[0_0_0_4px_#EBEDF0] border border-black/10 items-center justify-center w-fit">
        {year}
      </div>
      <div class="hidden md:block">
        <Image src={image} format="avif" alt={alt} class="w-full aspect-video object-cover rounded-lg" />
      </div>
    </>
  ) : (
    <>
      <div class="hidden md:block">
        <Image src={image} format="avif" alt={alt} class="w-full aspect-video object-cover rounded-lg" />
      </div>
      <div class="hidden md:flex px-4 py-1 bg-white rounded-full border border-black/10 items-center justify-center w-fit shadow-[0_0_0_4px_#EBEDF0]">
        {year}
      </div>
      <div class="hidden md:flex flex-col gap-2">
        <p class="text-xs uppercase tracking-wider text-amber-600 font-semibold">
          24 Aug, {year}
        </p>
        <h3 class="text-3xl font-semibold">{title}</h3>
        <p class="text-neutral-600 text-lg">{description}</p>
      </div>
    </>
  )}
</article> 