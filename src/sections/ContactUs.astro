<section
  id="contact"
  class="py-20 md:py-32 lg:py-48 flex justify-center items-center bg-white"
>
  <div class="w-full flex justify-center">
    <div class="max-w-7xl px-4 sm:px-6 w-full">
      <div class="flex flex-col md:flex-row gap-12 items-center md:items-start">
        <!-- Left: Existing Content -->
        <div
          class="flex-1 flex flex-col items-center md:items-start gap-2 mb-8 md:mb-0"
        >
          <span
            class="text-xs sm:text-sm font-semibold tracking-wider text-black/95 border border-black rounded-full py-1 px-3 mb-4 text-center md:text-left"
            >Contact Us</span
          >
          <h2
            class="text-2xl sm:text-4xl md:text-5xl font-bold mb-4 text-black/90 text-center md:text-left"
          >
            Get in Touch with Us
          </h2>
          <p
            class="max-w-md sm:max-w-xl md:max-w-3xl text-base text-black/85 text-center md:text-left mb-0"
          >
            We would love to hear from you! Whether you have questions,
            feedback, <br /> or just want to connect, feel free to reach out to us.
          </p>
        </div>
        <!-- Right: New Paragraph -->
        <div class="flex flex-col gap-6 items-center md:items-start">
          <div class="flex gap-4">
            <div class="">
              <label class="text-black" for="name">Name</label>
              <input
                type="text"
                id="name"
                class="mt-2 p-2 w-full max-w-xs rounded-md border border-black/30 text-black focus:outline-none"
                placeholder="Your Name"
              />
            </div>
            <div class="">
              <label class="text-black" for="email">Email</label>
              <input
                type="email"
                id="email"
                class="mt-2 p-2 w-full max-w-xs rounded-md border border-black/30 text-black focus:outline-none"
                placeholder="Your Email"
              />
            </div>
          </div>
          <div class="gap-4 w-full">
            <label class="text-black" for="message">Message</label>
            <textarea
              id="message"
              rows="3"
              class="mt-2 p-2 w-full rounded-md border border-black/30 text-black focus:outline-none"
              placeholder="Your Message"></textarea>
          </div>
          <button type="submit" class="w-full mt-4 text-center">
            <a
              href="#"
              class="w-full inline-flex items-center justify-center px-8 py-2 border border-transparent text-base font-medium rounded-full text-black bg-[#ffc229] hover:bg-yellow-400 transition shadow-md hover:shadow-lg"
            >
              Submit
            </a>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
