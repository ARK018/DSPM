---
import global from "../assets/globe.jpg";
import classroom from "../assets/classroom.jpg";
import { Image } from "astro:assets";
---

<section
  id="hero"
  class="relative w-full min-h-[60vh] sm:min-h-[80vh] h-[60vh] sm:h-[80vh] md:h-screen overflow-hidden bg-black flex items-center justify-center"
>
  <div
    class="absolute w-full h-full opacity-0 transition-opacity duration-1000 ease-in-out"
    id="slide1"
  >
    <Image
      src={global}
      alt="Globe"
      loading={"eager"}
      class="w-full h-full object-cover object-center"
    />
    <div class="absolute inset-0 bg-black/80 z-10"></div>
    <div
      class="absolute left-1/2 bottom-1/2 transform -translate-x-1/2 translate-y-1/2 text-white text-center z-20 px-2 sm:px-4 w-full max-w-lg md:max-w-4xl lg:max-w-6xl"
    >
      <h1
        class="block text-2xl sm:text-4xl md:text-5xl font-semibold leading-tight"
      >
        Discover global knowledge and diverse perspectives that shape the future
        of learning.
      </h1>
    </div>
  </div>
  <div
    class="absolute w-full h-full opacity-0 transition-opacity duration-2000 ease-in-out"
    id="slide2"
  >
    <Image
      src={classroom}
      alt="Classroom"
      loading={"eager"}
      class="w-full h-full object-cover object-center"
    />
    <div class="absolute inset-0 bg-black/80 bg-opacity-50 z-10"></div>
    <div
      class="absolute left-1/2 bottom-1/2 transform -translate-x-1/2 translate-y-1/2 text-white text-center z-20 px-2 sm:px-4 w-full max-w-lg md:max-w-4xl lg:max-w-6xl"
    >
      <span
        class="block text-2xl sm:text-4xl md:text-5xl font-semibold leading-tight"
      >
        Grow through collaboration in a shared journey of curiosity, creativity,
        and learning.
      </span>
    </div>
  </div>
</section>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      const slides = document.querySelectorAll("[id^='slide']");
      let currentIndex = 0;

      const showSlide = (index: number) => {
        slides.forEach((slide, i) => {
          slide.classList.toggle("opacity-100", i === index);
          slide.classList.toggle("opacity-0", i !== index);
        });
      };

      const nextSlide = () => {
        currentIndex = (currentIndex + 1) % slides.length;
        showSlide(currentIndex);
      };

      showSlide(currentIndex);
      setInterval(nextSlide, 5000);
    });
  }
</script>
